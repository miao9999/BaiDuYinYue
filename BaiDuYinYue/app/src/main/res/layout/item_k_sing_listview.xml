<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/item_k_sing_listview_ll_margin"
    android:orientation="vertical">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/item_k_sing_listview_ll_rl_margin">


        <TextView
            android:id="@+id/item_k_sing_title_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
             />

        <TextView
            android:id="@+id/item_k_sing_line_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/item_k_sing_title_tv"
            android:text=" - " />

        <TextView
            android:id="@+id/item_k_sing_name_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/item_k_sing_line_tv"
             />

        <TextView
            android:id="@+id/item_k_sing_num_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/item_k_sing_title_tv"
            android:textColor="@color/item_k_sing_listview_num_text_color"
            android:textSize="10sp" />

        <TextView
            android:id="@+id/item_k_sing_singed_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/item_k_sing_title_tv"
            android:layout_toRightOf="@id/item_k_sing_num_tv"
            android:text="@string/k_sing_singed"
            android:textColor="@color/item_k_sing_listview_singed_text_color"
            android:textSize="@dimen/item_k_sing_listview_singed_text_size" />

        <ImageView
            android:id="@+id/item_k_sing_mic_iv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:src="@mipmap/mic" />
    </RelativeLayout>


</LinearLayout>