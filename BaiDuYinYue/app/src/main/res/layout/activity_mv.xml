<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <FrameLayout
        android:id="@+id/mv_activity_fl"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
    <VideoView
        android:id="@+id/mv_activity_vv"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center"
         />
    </FrameLayout>
   <LinearLayout
       android:id="@+id/mv_activity_bottom_ll"
       android:layout_alignParentBottom="true"
       android:layout_width="match_parent"
       android:layout_height="40dp"
       android:background="#55555555"
       android:orientation="horizontal"
       >
       <ImageView
           android:id="@+id/mv_activity_full_screen_iv"
           android:layout_width="wrap_content"
           android:layout_height="match_parent"
           android:src="@mipmap/full_screen"
           />
       <SeekBar
           android:id="@+id/mv_activity_seekbar"
           android:layout_width="0dp"
           android:layout_weight="1"
           android:layout_height="wrap_content"
           android:layout_margin="10dp"
           android:maxHeight="2dp"
           android:minHeight="2dp"
           android:progressDrawable="@drawable/shape_seekbar"
           android:thumb="@mipmap/seek_ground" />
       <ImageView
           android:id="@+id/mv_activity_small_screen_iv"
           android:layout_width="wrap_content"
           android:layout_height="match_parent"
           android:src="@mipmap/small_screen"
           />
   </LinearLayout>
</RelativeLayout>